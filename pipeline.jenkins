#!groovy

pipeline {
    agent any

    triggers {
        pollSCM('* * * * *')
    }

    options {
        timestamps()
    }

    stages {
        stage('Build') {
            steps {
                sh "mvn -DskipTests clean package"
                sh "docker build . -t show-class-info"
            }
        }

        stage('Test') {
            steps {
                sh "mvn test"
            }
        }
    } 
}