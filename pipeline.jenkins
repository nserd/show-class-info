#!groovy

pipeline {
    agent any
    
    triggers {
        pollSCM('* * * * *')
    }

    tools {
        maven "M3"
    }
    
    stage {
        stage('Build') {
            steps {
                sh "mvn clean package"
                sh "docker build . -t show-class-info"
            }
        }
    } 
}